.app--tweet
    form(id="tweet-form")
        .circle--fluid
            div(class="circle--fluid--cell circle--fluid--primary align-bottom app--tweet--post")
                div(class="app--avatar" style=`background-image: url(${account_user.profile_img})`)
                    img(src=account_user.profile_img)

                textarea(class="circle--textarea--input" placeholder="What's happening?" id="tweet-textarea")
                strong(class="app--tweet--char" id="tweet-char") 140
                
            div(class="circle--fluid--cell align-bottom")
                button(class="button-primary") Tweet
            